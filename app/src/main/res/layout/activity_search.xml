<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="rtl"
    android:background="@drawable/background_list_style"
    android:padding="16dp">

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="חזור"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/light_purple"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/selectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/backButton"
        android:layout_marginBottom="8dp"
        android:visibility="invisible">

        <EditText
            android:id="@+id/summaryNumberEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="מספר"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:textDirection="rtl"/>

        <Button
            android:id="@+id/openSummaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="פתח סיכום"
            android:textStyle="bold"
            android:backgroundTint="@color/blue"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/addToFavoritesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הוסף למועדפים"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/light_purple"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/coursesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/selectionLayout"
        android:layout_alignParentTop="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/noSummariesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="אין סיכומים לקורס שנבחר"
        android:textColor="@color/light_purple"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_above="@id/selectionLayout"
        android:layout_alignParentTop="true"
        android:visibility="visible" />
</RelativeLayout>
